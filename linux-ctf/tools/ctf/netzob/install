#!/bin/bash -e

install-packages \
	python-dev \
	python-impacket \
	python-setuptools \
	build-essential \
	python-numpy \
	libpcap-dev

install-pip \
	bintrees \
	bitarray \
	netaddr \
	pcapy

download-git https://dev.netzob.org/git/netzob ; cd ${P} ; \
	sudo python setup.py build ; \
	sudo python setup.py develop --user ; \
	sudo ln -s $PWD/netzob $BIN_LOCAL_PATH